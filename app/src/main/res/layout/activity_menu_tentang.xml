<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    tools:context="com.application.wisatacilacap.MenuTentang">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        app:titleTextColor="#ffffffff">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/fiqihkecil"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:text="Viqih Febriyan"
                    android:textColor="#DD000000"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Tentang"
                    android:textColor="#dd000000"
                    android:textSize="16sp">

                </TextView>

                <Button
                    android:elevation="1dp"
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Profil"
                    android:textAlignment="textStart"
                    android:textAllCaps="false">
                </Button>

                <Button
                    android:elevation="1dp"
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/ic_android_black_24dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Pembuatan Aplikasi"
                    android:textAlignment="textStart"
                    android:textAllCaps="false">
                </Button>

                <Button
                    android:elevation="1dp"
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/ic_info_black_24dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Credits"
                    android:textAlignment="textStart"
                    android:textAllCaps="false">
                </Button>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:text="Aplikasi Wisata Cilcap"
                android:fontFamily="@font/poppinsregular"
                android:textSize="9sp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/versi"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppinsregular"
                android:textSize="9sp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>


        </LinearLayout>




    </ScrollView>

</RelativeLayout>